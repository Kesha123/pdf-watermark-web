{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [".dto.ts"]
        }
      }
    ],
    "assets": [
      "pdf-watermark/assets/jwks.json",
      { "include": "pdf-watermark/assets/*", "exclude": "pdf-watermark/assets/jwks.json", "outDir": "dist/assets" },
      { "include": "pdf-watermark/assets/jwks.json", "outDir": "dist/assets" }
    ]
  }
}
